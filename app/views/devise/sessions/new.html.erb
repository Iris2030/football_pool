<h2  class ="header">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
    <%= f.label :email, class: "label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>

    <%= f.label :password, class: "label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "input" %>


  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn" %>
  </div>
<% end %>
</div>

</div>
<div class="link_wrapper_menu" style="margin-top: 30px">
<%= render "devise/shared/links" %>
  <%= link_to "Back to users", users_path %>
</div>

