<%= stylesheet_link_tag "games.css"%>


<h1 class="header" >Teams</h1>

<div id="teams">
  <% @teams.each do |team| %>
    <%= render team %>
    <div class="wrapper">
          <li class="team ">    
        <%= "#{team.name} " %>
    </li>
  
    <p style="text-decoration: none;font-size: 20px; color: black; display: inline-block">
      <%= link_to "Show this team", team %>
    </p>
    <p style=" display: inline-block; margin-right: 15px; border-radius: 5px; width: 100px; height: 30px; text-align: center"><%= link_to "Edit Team", edit_team_team_path(team) %></p>
    </div>
  <% end %>
</div>


<div class="link_wrapper">
<p style="list-style: none; font-size: 25px; font-weight: bold">
<%= link_to "New team", new_team_path %>
</p>

<p style="list-style: none; font-size: 25px; font-weight: bold">
<%= link_to "Home page", root_path %>
</p>
</div>