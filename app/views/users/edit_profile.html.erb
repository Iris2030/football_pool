<%= stylesheet_link_tag "games.css"%>

<h1  class ="header">Edit Profile</h1>

<%= form_with model: @user do |form|%>


<div class="container">
<%= form.label :first_name, class: "label"  %> <br>
<%= form.text_field :first_name, class: "input" %> 


<%= form.label :last_name, class: "label"  %> <br>
<%= form.text_field :last_name, class: "input" %> 



<%= form.submit "Submit", class: "btn"%>
 

<% end %>
</div>


<div class="link_wrapper_menu">
 <p style="list-style: none; font-size: 25px; font-weight: bold">
  <%= link_to "Back to users", users_path %>
</p>
</div>
